<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.varunbarad.highlightable_calendar_view.HighlightableCalendarView
        android:id="@+id/calendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:dayBackgroundColorDisabled="#0f0"
        app:dayBackgroundColorEnabled="#00f"
        app:dayTextColorCurrentDay="#ff0000"
        app:dayTextColorDisabled="#ff0"
        app:dayTextColorEnabled="#fff"
        app:firstDayOfWeek="monday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleBackgroundColor="@color/colorAccent"
        app:titleMonthChangeButtonTint="@color/colorPrimary"
        app:titleTextColor="@color/colorPrimary"
        app:weekDay_backgroundColor="@color/colorPrimaryDark"
        app:weekDay_textColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>
